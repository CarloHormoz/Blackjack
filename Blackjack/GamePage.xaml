<Page
    x:Class="BlackJackUI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BlackJackUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="DarkGreen">
        <!--Side Menu Bar-->
        <SplitView x:Name="CoolMenu" IsPaneOpen="False" DisplayMode="CompactOverlay" CompactPaneLength="50" 
                   OpenPaneLength="250">
            <SplitView.Pane>
                <StackPanel Background="DarkRed">
                    <!--https://docs.microsoft.com/en-us/windows/uwp/design/style/segoe-ui-symbol-font-->
                    <Button x:Name="MenuButton" FontFamily="Segoe MDL2 Assets" Content="&#xE700;" Background="{x:Null}"
                            Click="MenuButton_Click" FontSize="30"/>
                    <StackPanel Orientation="Horizontal">
                        <Button FontSize="30" Margin="0,0,0,0" Background="{x:Null}" x:Name="Button1" 
                                FontFamily="Segoe MDL2 Assets" Content="&#xE7fc;"/>
                        <TextBlock Text="Game Rules" FontSize="18" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button FontSize="30" Margin="0,0,0,0" Background="{x:Null}" x:Name="Button2" 
                                FontFamily="Segoe MDL2 Assets" Content="&#xE76e;"/>
                        <TextBlock Text="Player Stats" FontSize="18" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button FontSize="30" Margin="0,0,0,0" Background="{x:Null}" x:Name="Button3" 
                                FontFamily="Segoe MDL2 Assets" Content="&#xE7bf;"/>
                        <TextBlock Text="Get More Chips" FontSize="18" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button FontSize="30" Margin="0,0,0,0" Background="{x:Null}" x:Name="Button4" 
                                FontFamily="Segoe MDL2 Assets" Content="&#xE70f;"/>
                        <TextBlock Text="Creators" FontSize="18" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button FontSize="30" Margin="0,0,0,0" Background="{x:Null}" x:Name="Button5" 
                                FontFamily="Segoe MDL2 Assets" Content="&#xE72d;"/>
                        <TextBlock Text="GitHub Link" FontSize="18" VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </SplitView.Pane>
        </SplitView>
        <Grid Margin="50,0,0,0">
            <Grid x:Name="GameSide">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto" MinHeight="0"/>
                    <RowDefinition Height="Auto" MinHeight="0"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <!--Bottom Player Button Layout-->
            </Grid>
        </Grid>
        <StackPanel Height="150" Margin="0,550,0,20">
            <Button x:Name="Hit" Margin="0,0,0,20" Content="Hit"
                        Background="#66FFFFFF"  BorderThickness="6" BorderBrush="Black" Foreground="Black" 
                        FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                        Width="200"/>
            <Button x:Name="Stand" Margin="00,0,0,20" Content="Stand"
                        Background="#66FFFFFF"  BorderThickness="6" BorderBrush="Black" Foreground="Black" 
                        FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                        Width="200"/>
        </StackPanel>
        <StackPanel Height="110" Margin="0,0,0,600">

            <TextBlock Text="BlackJack Big Group" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        </StackPanel>
    </Grid>
</Page>